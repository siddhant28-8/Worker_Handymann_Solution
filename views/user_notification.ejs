    <script>
        // Get references to the button and the card-deck
        let btnn = document.getElementById("btnn");
        let divi = document.getElementById("first");
    
        // Attach the event listener to the button
        btnn.onclick = onClicking;
    
        // Function to hide/show the card-deck when button is clicked
        function onClicking() {
            // Check if the card-deck is already hidden
            if (divi.style.display === "none") {
                divi.style.display = "block";  // Show the card-deck
                btnn.innerHTML = "<"; // Change button text to "<"
            } else {
                divi.style.display = "none"; // Hide the card-deck
                btnn.innerHTML = ">"; // Change button text to ">"
            }
        }


   function updateStatus(container, status) {
    const statusSegment = container.querySelector('.status-bar');
    const points = container.querySelectorAll('.point');

    if (status === 'sent') {
      container.classList.remove('received', 'confirmed');
      container.classList.add('loading');
      statusSegment.style.width = '33%';
      points[0].classList.add('completed');
    } else if (status === 'received') {
      container.classList.remove('loading', 'confirmed');
      container.classList.add('received');
      statusSegment.style.width = '50%';
      points[1].classList.add('completed');
    } else if (status === 'confirmed') {
      container.classList.remove('loading', 'received');
      container.classList.add('confirmed');
      statusSegment.style.width = '100%';
      points[2].classList.add('completed');
    }
  }

  // Loop through all status bars
  document.querySelectorAll('.card1').forEach((card, index) => {
    const status = card.getAttribute('data-status');
    const statusBar = card.querySelector('.status-bar-container');

    // Always animate to 'sent'
    setTimeout(() => updateStatus(statusBar, 'sent'), 500);

    // Animate to 'received'
    setTimeout(() => updateStatus(statusBar, 'received'), 2000);

    // Only animate to 'confirmed' if it's confirmed
    if (status === 'confirmed') {
      setTimeout(() => updateStatus(statusBar, 'confirmed'), 3500);
    }
  });
    </script>
    
