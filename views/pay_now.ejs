<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Proceed to Payment</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(135deg,#e0e7ff,#f5d0fe);
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .payment-card {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      padding: 40px 30px;
      max-width: 420px;
      width: 100%;
      text-align: center;
    }
    .payment-card h2 {
      font-weight: 600;
      color: #4a148c;
      margin-bottom: 10px;
    }
    .summary {
      margin: 25px 0;
      text-align: left;
      font-size: 1rem;
    }
    .summary p {
      margin: 0 0 8px;
      display: flex;
      justify-content: space-between;
    }
    .pay-btn {
      background: #4a148c;
      color: #fff;
      border: none;
      padding: 12px 25px;
      font-size: 1.1rem;
      border-radius: 8px;
      width: 100%;
      transition: background 0.3s;
    }
    .pay-btn:hover {
      background: #6a1b9a;
    }
    .logo {
      font-size: 40px;
      color: #4a148c;
      margin-bottom: 15px;
    }
  </style>
</head>
<body>

  <div class="payment-card">
    <div class="logo"><i class="fas fa-hand-holding-usd"></i></div>
    <h2>Proceed to Payment</h2>
    <p class="text-muted mb-4">Please review the details before making payment.</p>

    <div class="summary border-top pt-3">
      <p><span>Worker:</span> <strong><%= bookingInfo.workername %></strong></p>
      <p><span>Total Time:</span> <strong><%= totalTime %></strong></p>
      <!-- Example: show calculated amount if you have it -->
      <p><span>Amount:</span> <strong>₹<%= Price %></strong></p>
    </div>

    <button id="rzp-button1" class="pay-btn mt-3">
      <i class="fas fa-credit-card me-2"></i> Pay with Razorpay
    </button>
  </div>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
    const totalTime="<%= totalTime %>";
    const Razorpay_key="<%= RAZORPAY_KEY %>";
    const Price = (parseInt(totalTime.split(':')[0]) * 200)==0?200:(parseInt(totalTime.split(':')[0]) * 200);
    const options = {
      key: Razorpay_key,   // Replace with your Razorpay key
      amount:Price * 100 ,                    // amount in paise (₹500)
      currency: "INR",
      name: "Worker Handymann Solution",
      description: "Work Payment",
       handler: function (response) {
         // Send payment id to backend so it can delete booking,
         // add history, and redirect to worker page
         fetch('/Work_In_Progress/payment/success', {
             method: 'POST',
             headers: { 'Content-Type': 'application/json' },
             body: JSON.stringify({
                 razorpay_payment_id: response.razorpay_payment_id
             })
         })
         .then(res => res.json())
         .then(data => {
             if (data.redirect) {
                 window.location.href = data.redirect;
             } else {
                 alert('Payment captured, but redirect info missing.');
             }
         })
         .catch(err => {
             console.error('Error notifying server:', err);
             alert('Payment succeeded, but server update failed.');
         });
     },
      prefill: {
          email: "<%= bookingInfo?.user_email || '' %>"
      },
      theme: { color: "#4a148c" }
    };
    const rzp1 = new Razorpay(options);
    document.getElementById('rzp-button1').onclick = function(e){
      rzp1.open();
      e.preventDefault();
    };
  </script>
</body>
</html>
