          width="450" 
          height="300" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>

      <!-- Contact Info -->
      <div class="contact-info">
        <p><span>📍</span> Virar, Palghar - 401303</p>
        <p><span>📞</span> 93566xxxxx / 88578xxxxx</p>
        <p><span>✉️</span> sid28rai@gmail.com</p>
      </div>
    </div>
  </div>

  <!--  footer section -->
      <footer class="footer">
        <div class="footer-container">
            <div class="footer-left">
                <img src="logo.png" alt="HomeWork Logo">
                <p class="tagline">Book your trusted handyman in just a few clicks.</p>
            </div>

            <div class="footer-center">
                <ul>
                    <li><a href="/About">About</a></li>
                    <li><a href="signin.html">Sign In</a></li>
                    <li><a href="/Faq">FAQs</a></li>
                    <li><a href="/Pricing">Pricing</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
            </div>

            <div class="footer-right">
                <div class="social">
                    <span>@homvices</span><a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <div class="social">
                    <span>@homvices</span><a href="#"><i class="fab fa-facebook-f"></i></a>
                </div>
                <div class="social">
                    <span>@homvices</span><a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
</footer>

