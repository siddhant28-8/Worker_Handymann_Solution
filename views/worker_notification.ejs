    <script>
        // Get references to the button and the card-deck
        let btnn = document.getElementById("btnn");
        let divi = document.getElementById("first");
    
        // Attach the event listener to the button
        btnn.onclick = onClicking;
    
        // Function to hide/show the card-deck when button is clicked
        function onClicking() {
            // Check if the card-deck is already hidden
            if (divi.style.display === "none") {
                divi.style.display = "block";  // Show the card-deck
                btnn.innerHTML = "<"; // Change button text to "<"
            } else {
                divi.style.display = "none"; // Hide the card-deck
                btnn.innerHTML = ">"; // Change button text to ">"
            }
        }


  // REMOVE or comment this error line:
  // let btn_decline = document.getElementsByClassNam("btn-decline")[0];

  document.querySelectorAll(".btn-accept").forEach(btn => {
    btn.addEventListener('click', () => {
      try {
        let worker_notification = JSON.parse(btn.getAttribute('worker_notification'));
        let worker_email = JSON.parse(btn.getAttribute('worker'));
        AddBookings(worker_notification, worker_email);
      } catch (err) {
        console.error("Failed to parse button attributes:", err);
      }
    });
  });

  function AddBookings(worker_notification, worker_email) {
    fetch('/add_bookings', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ worker_notification, worker_email })
    })
      .then(res => res.json())
      .then(data => {
        console.log("Response from server:", data);
        if (data.redirect) {
          window.location.href = data.redirect;
        }
      })
      .catch(err => console.error("Fetch error:", err));
  }
        
    </script>
    
